#include <iostream>//подключение библиотеки функции ввода-вывода
#include <cmath>//подключение математической библиотеки 
using namespace std; //подключение пространства имён std



/*
* \brief Точка входа в программу.
* \return Возвращает 0 в случае успешного выполнения.
*/

int main()
{
    const int n = 11;
    
    double y1[n], x1[n];
    
    setlocale(LC_ALL, "Russian");
    
    double x, y;
    
    cout << "Далее Вы будете вводить значения х в диапазоне от 1 до 2 включительно с шагом 0.1" << endl;
    
    for (int i = 0; i < 11; i++)
    {
        cout << "Введите значение х ";
        cin >> x;
        x1[i] = x;
        y = cos(2 / x) - 2 * sin(1 / x) + 1 / x;
        y1[i] = y;
    }
    cout << "x "; for (int i = 0; i < 11; i++) { cout << "     " << x1[i] << "  "; }
    cout << endl;
    cout << "y "; for (int i = 0; i < 11; i++) { cout << "" << y1[i] << " "; }
    cout << endl;
    return 0; 

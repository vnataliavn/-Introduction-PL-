#include <iostream>//подключение библиотеки функции ввода-вывода
#include <cmath>//подключение математической библиотеки 
using namespace std; //подключение пространства имён std

/*
*\brief Математическая функция, рассчитывающая значение A - работу тока
* \param  double U - переменная, имеющая тип данных с плавающей точкой двойной точности
* \param  double I - переменная, имеющая тип данных с плавающей точкой двойной точности
* \param const double t - константа, имеющая тип данных с плавающей точкой двойной точности
* \return Возвращает значение A - работу тока
*/
double getA( double U, double I, const double t);

/*
 * \brief Точка входа в программу.
 * \return Возвращает 0 в случае успешного выполнения.
 */

int main()
{
    setlocale(LC_ALL, "Russian");
    double I, U, A;
    const double t = 20 * 60;
    cout << "Величина тока, А: ";
   /* Проверка ввода пользователя переменной I. 
    При вводе букв, символов и отрицательных значений выводится сообщение о повторном вводе до тех пор пока ввод не удовлетворит условия*/
    while (!(cin >> I) || (cin.peek() != '\n') || (I <= 0) || (I>10))
    {
        cin.clear();
        while (cin.get() != '\n');
        cout << "Введите положительное число, отделяя дробную часть точкой\n";
    }
    /* Проверка ввода пользователя переменной U.
    При вводе букв, символов и отрицательных значений выводится сообщение о повторном вводе до тех пор пока ввод не удовлетворит условия*/
    cout << "Величина напряжения, В: ";
    while (!(cin >> U) || (cin.peek() != '\n') || (U <= 0))
    {
        cin.clear();
        while (cin.get() != '\n');
        cout << "Введите положительное число, отделяя дробную часть точкой\n";
    }
    cout << "20 минут в секундах = " << t << endl << "Работа электрического тока A равна  A=I*U*t" << endl;
    
    cout << "A=" <<getA(U,I,t) << " кДж";
    return 0; 
}
double getA(double U, double I, const double t) {
    double A;
    A = U * I * t / 1000;
    return A;
}

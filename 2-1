#include <iostream>//подключение библиотеки функции ввода-вывода
#include <cmath>//подключение математической библиотеки 
using namespace std; //подключение пространства имён std

/*
*\brief Математическая функция, рассчитывающая значение P - периметра прямоугольника
* \param double a - переменная, имеющая тип данных с плавающей точкой двойной точности
* \param double b - переменная, имеющая тип данных с плавающей точкой двойной точности
* \param double c - переменная, имеющая тип данных с плавающей точкой двойной точности
* \param double d - переменная, имеющая тип данных с плавающей точкой двойной точности
* \return Возвращает значение P
*/
double getP (double a, double b, double c, double d);

/*
*\brief Математическая функция, рассчитывающая значение S - площади прямоугольник
* \param double a - переменная, имеющая тип данных с плавающей точкой двойной точности
* \param double b - переменная, имеющая тип данных с плавающей точкой двойной точности
* \return Возвращает значение S
*/
double getS(double a, double b);

/*
*\brief Математическая функция, рассчитывающая значение D - диагонали прямоугольника
* \param double a - переменная, имеющая тип данных с плавающей точкой двойной точности
* \param double b - переменная, имеющая тип данных с плавающей точкой двойной точности
* \return Возвращает значение D
*/
double getD(double a, double b);

/*
 * \brief Точка входа в программу.
 * \return Возвращает 0 в случае успешного выполнения.
 */

int main()
{
    setlocale(LC_ALL, "Russian");
    double a;
    double b;
    double c;
    double d;
    cout << "Введите одну из непараллельных сторон прямоугольника ";
    while (!(cin >> a) || (cin.peek() != '\n') || (a <= 0))
    {
        cin.clear();
        while (cin.get() != '\n');
        cout << "Введите положительное число, отделяя дробную часть точкой\n ";
    }
    cout << "Введите одну из непараллельных сторон прямоугольника ";
    while (!(cin >> b) || (cin.peek() != '\n') || (b <= 0))
    {
        cin.clear();
        while (cin.get() != '\n');
        cout << "Введите положительное число, отделяя дробную часть точкой\n ";
    }
    c = a; d = b;
    const auto P = getP(a, b, c, d);
    const auto S = getS(a,b);
    const auto D = getD(a, b);
    cout << "Результат:" << endl;
    cout << "Стороны a,c=" <<a<< endl << "Стороны b,d=" <<b<< endl << "Периметр ="<<P<<endl<< "Площадь ="<<S<<endl<<"Диагональ ="<<D;
    return 0; 
}
double getP(double a, double b, double c, double d) {
    double P;
    P = a + b + c + d;
    return P;
}
double getS(double a, double b) {
    double S;
    S = a * b;
    return S;
}
double getD(double a, double b) {
    double D;
    D = sqrt(pow(a, 2) + pow(b, 2));
    return D;
